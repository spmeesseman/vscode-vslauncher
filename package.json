{
    "name": "vscode-vslauncher",
    "version": "1.0.5",
    "displayName": "Visual Studio Launcher",
    "description": "Open projects, solutions, and files in Visual Studio via context menu",
    "icon": "res/logo.png",
    "publisher": "spmeesseman",
    "author": {
        "name": "Scott Meesseman"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/spmeesseman/vscode-vslauncher.git"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "galleryBanner": {
        "color": "#EEEEEE",
        "theme": "light"
    },
    "keywords": [
        "vs",
        "visual studio",
        "project",
        "solution",
        "context menu",
        "multi-root ready"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onCommand:vsLauncher.openInVS"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "scripts": {
        "package": "vsce package",
        "publish": "vsce publish",
        "vscode:prepublish": "npm run build",
        "build": "npx tsc -p ./",
        "compile": "npx tsc -p ./",
        "semantic-release": "semantic-release",
        "semantic-release-no-ci": "semantic-release --no-ci",
        "semantic-release-dry": "semantic-release --dry-run",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "commit": "npx git-cz"
    },
    "dependencies": {
        "vscode-nls": "^4.0.0"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^3.0.2",
        "@semantic-release/git": "^7.0.8",
        "@types/glob": "^7.1.1",
        "@types/istanbul": "^0.4.30",
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.13.0",
        "codecov": "^3.2.0",
        "commitizen": "^3.0.7",
        "conventional-changelog-spm": "^1.2.3",
        "cz-conventional-changelog": "^2.1.0",
        "decache": "^4.5.1",
        "eslint-plugin-prettier": "^3.0.1",
        "glob": "^7.1.2",
        "iconv-lite": "^0.4.23",
        "istanbul": "^0.4.5",
        "jschardet": "^2.1.0",
        "mocha": "^6.0.2",
        "mocha-junit-reporter": "^1.18.0",
        "mocha-multi-reporters": "^1.1.7",
        "prettier": "^1.16.4",
        "prettylint": "^1.0.0",
        "remap-istanbul": "^0.13.0",
        "semantic-release": "^15.13.3",
        "semantic-release-vsce": "^3.0.0",
        "tslint": "^5.8.0",
        "typescript": "^3.0.3",
        "vsce": "^1.48.0",
        "vscode": "^1.1.30",
        "vscode-nls-dev": "3.2.6"
    },
    "contributes": {
        "commands": [
            {
                "command": "vsLauncher.openInVS",
                "title": "%command.openInVS%",
                "when": "resourceScheme == file",
                "icon": {
                    "light": "res/light/continue.svg",
                    "dark": "res/dark/continue.svg"
                }
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "vsLauncher.openInVS",
                    "group": "9_vslaunch",
                    "when": "resourceScheme == file"
                }
            ],
            "explorer/context": [
                {
                    "command": "vsLauncher.openInVS",
                    "group": "9_vslaunch",
                    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
                }
            ]
        },
        "configuration": {
            "id": "vsLauncher",
            "type": "object",
            "title": "Visual Studio Launcher",
            "properties": {
                "vsLauncher.pathToVS": {
                    "type": "string",
                    "description": "%config.vsLauncher.pathToVS%"
                },
                "vsLauncher.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "%config.vsLauncher.debug%"
                }
            }
        }
    }
}
